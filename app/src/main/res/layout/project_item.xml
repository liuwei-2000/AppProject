<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="204dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/project_item_view"
    android:paddingLeft="6dp"
    android:paddingRight="6dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#898989"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/project_image"
        android:layout_width="108dp"
        android:layout_height="192dp"
        android:layout_marginStart="6dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/project_title"
        android:ellipsize="end"
        android:layout_width="0dp"
        android:layout_height="30sp"
        android:background="#ffffff"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="6dp"
        android:textSize="20sp"
        android:text="This is title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/project_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/project_describe"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="24dp"
        android:background="#ffffff"
        android:text="This is describe"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/project_author"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/project_image"
        app:layout_constraintTop_toBottomOf="@id/project_title" />

    <TextView
        android:id="@+id/project_author"
        android:layout_width="120dp"
        android:layout_height="15sp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="24dp"
        android:background="#ffffff"
        android:text="This is author"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/project_date"
        app:layout_constraintStart_toEndOf="@+id/project_image" />

    <TextView
        android:id="@+id/project_date"
        android:layout_width="0dp"
        android:layout_height="15sp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="24dp"
        android:background="#ffffff"
        android:text="This is date"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/project_author" />

</androidx.constraintlayout.widget.ConstraintLayout>